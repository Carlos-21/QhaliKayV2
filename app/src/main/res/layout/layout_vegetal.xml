<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <TextView
        android:id="@+id/textoProteinaVVM"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textoGrasaVVM"
        android:layout_width="242dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textoProteinaVVM"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-107dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textoCaloriaVVM"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:layout_above="@+id/textoGrasaVVM"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tarjeta3"
        android:layout_width="142dp"
        android:layout_height="176dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">
        <!--By Mark Gurney [CC BY 3.0 (http://creativecommons.org/licenses/by/3.0)], via Wikimedia Commons -->
        <ImageView
            android:id="@+id/fotoVVM"
            android:layout_width="121dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textoVegetalVVM"
            android:layout_width="119dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#8c000000"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#ffe3e3e3"
            android:textSize="15sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</RelativeLayout>